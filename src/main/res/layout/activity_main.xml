<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gray box at the bottom 2/3 of the screen -->
    <FrameLayout
        android:id="@+id/grayBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#555555"
        android:layout_weight="2"/>

    <!-- Green box at the top 1/3 of the screen -->
    <FrameLayout
        android:id="@+id/greenBox"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:background="#80ccee" />


    <!-- GridLayout for blocks -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="5"
        android:rowCount="4"
        android:padding="16dp"/>
    <!-- TextView for displaying number of collided blocks -->
    <TextView
        android:id="@+id/collidedBlockCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:padding="8dp"/>
    <!-- Ball -->
    <ImageView
        android:id="@+id/ball"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ball_image"
        android:layout_gravity="center"/>

    <!-- Goblin Character -->
    <ImageView
        android:id="@+id/goblinCharacter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/goblin"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp" />

</FrameLayout>